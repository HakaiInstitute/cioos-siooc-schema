{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "A reimplementation of the default CKAN dataset schema",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Title",
      "preset": "title",
      "form_placeholder": "eg. A descriptive title"
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "field_name": "notes",
      "label": "Abstract",
      "form_snippet": "markdown.html",
      "form_placeholder": "eg. Some useful notes about the data"
    },
    {
      "field_name": "purpose",
      "label": "Purpose",
      "form_snippet": "markdown.html",
      "form_placeholder": "eg. Intented use of the dataset or reason for collecting"
    },
    {
      "field_name": "tag_string",
      "label": "Keywords",
      "preset": "tag_string_autocomplete",
      "form_placeholder": "eg. economy, mental health, government"
    },
    {
      "field_name": "license_id",
      "label": "License",
      "form_snippet": "license.html",
      "help_text": "License definitions and additional information can be found at http://opendefinition.org/"
    },
    {
     "iso_path": ["MD_Metadata","MD_Identifier","CI_Citation","CI_Responsibility"],
     "field_name": "MD_Scope",
     "label": "Scope",
     "preset": "composite",
     "subfields":[
    {
      "iso_path":["MD_Metadatascope","resourceScope","MD_ScopeCode"],
      "field_name": "scope_code",
      "label": "Code",
      "preset": "select",
      "choices": [
        {
          "value": "attribute",
          "label": "attribute"
        },
        {
          "value": "attributeType",
          "label": "attributeType"
        },
        {
          "value": "collectionHardware",
          "label": "collectionHardware"
        },
        {
          "value": "collectionSession",
          "label": "collectionSession"
        },
        {
          "value": "dataset",
          "label": "dataset"
        },
        {
          "value": "series",
          "label": "series"
        },
        {
          "value": "nonGeographicDataset",
          "label": "nonGeographicDataset"
        },
        {
          "value": "dimensionGroup",
          "label": "dimensionGroup"
        },
        {
          "value": "feature",
          "label": "feature"
        },
        {
          "value": "featureType",
          "label": "featureType"
        },
        {
          "value": "propertyType",
          "label": "propertyType"
        },
        {
          "value": "fieldSession",
          "label": "fieldSession"
        },
        {
          "value": "software",
          "label": "software"
        },
        {
          "value": "service",
          "label": "service"
        },
        {
          "value": "model",
          "label": "model"
        },
        {
          "value": "tile",
          "label": "tile"
        },
        {
          "value": "metadata",
          "label": "metadata"
        },
        {
          "value": "initiative",
          "label": "initiative"
        },
        {
          "value": "sample",
          "label": "sample"
        },
        {
          "value": "document",
          "label": "document"
        },
        {
          "value": "repository",
          "label": "repository"
        },
        {
          "value": "aggregate",
          "label": "aggregate"
        },
        {
          "value": "product",
          "label": "product"
        },
        {
          "value": "collection",
          "label": "collection"
        },
        {
          "value": "coverage",
          "label": "coverage"
        },
        {
          "value": "application",
          "label": "application"
        }
      ]
      },

      {
        "iso_path":["MD_Metadatascope","resourceScope","MD_ScopeCode"],
        "field_name": "scope_name",
        "label": "Name"
      }
    ]},

    {
      "field_name": "status",
      "label": "Status",
      "preset": "select",
      "choices": [
        {
          "value": "completed",
          "label": "Completed"
        },
        {
          "value": "archived",
          "label": "Archived"
        },
        {
          "value": "on_going",
          "label": "On Going"
        },
        {
          "value": "planned",
          "label": "Planned"
        },
        {
          "value": "required",
          "label": "Required"
        },
        {
          "value": "under_development",
          "label": "Under Development"
        }
     ]
    },
    {
      "field_name": "defaultLocale",
      "label": "Default Locale",
      "preset": "select",
      "choices": [
        {
          "value": "EN",
          "label": "English"
        },
        {
          "value": "FR",
          "label": "French"
        }
     ]
    },



    {
      "iso_path":["MD_MetadataScope","CI_Date"],
      "field_name": "CI_Date",
      "label": "Dates",
      "preset": "composite_repeating",
      "form_blanks": 1,
      "subfields": [{
          "field_name": "date",
          "label": "Date",
          "preset": "date",
          "form_placeholder": "yyyy-mm-mm"
        },
        {
          "field_name": "dateType",
          "label": "Type",
          "choices": [{
              "value": "creation",
              "label": "Creation"
            },
            {
              "value": "publication",
              "label": "Publication"
            },
            {
              "value": "revision",
              "label": "Revision"
            },
            {
              "value": "expiry",
              "label": "Expiry"
            },
            {
              "value": "lastUpdate",
              "label": "Last Update"
            },
            {
              "value": "lastRevision",
              "label": "Last Revision"
            },
            {
              "value": "nextUpdate",
              "label": "Next Update"
            },
            {
              "value": "unavailable",
              "label": "Unavailable"
            },
            {
              "value": "inForce",
              "label": "In Force"
            },
            {
              "value": "adopted",
              "label": "Adopted"
            },
            {
              "value": "deprecated",
              "label": "Deprecated"
            },
            {
              "value": "superseded",
              "label": "Superseded"
            },
            {
              "value": "validityBegins",
              "label": "Validity Begins"
            },
            {
              "value": "validityExpires",
              "label": "Validity Expires"
            },
            {
              "value": "released",
              "label": "Released"
            },
            {
              "value": "distribution",
              "label": "Distribution"
            }
          ]
        }
      ]
    },

    {
      "field_name": "metadata_created",
      "label": "Metadata Created",
      "preset": "date",
      "form_placeholder": "yyyy-mm-mm"
    },
    {
     "iso_path": ["MD_Metadata","MD_Identifier","CI_Citation","CI_Responsibility"],
     "field_name": "CI_ResponsibleParty",
     "label": "Responsible Party",
     "preset": "composite",
     "subfields":[
         {
           "iso_path": ["CI_Party","name","CharacterString"],
           "field_name": "RP_name",
           "label": "Name",
           "form_placeholder": "Joe Bloggs",
           "hint": "name of orginization or individual"
         },
         {
           "iso_path": ["CI_Party","CI_Contact","affiliation","CharacterString"],
           "field_name": "RP_affiliation",
           "label": "Affiliation",
           "preset": "dataset_organization"
         },
         {
           "iso_path": ["CI_Party","CI_Contact","address","CharacterString"],
           "field_name": "RP_city",
           "label": "City"
         },
         {
           "iso_path": ["CI_Address","electronicMailAddress","CharacterString"],
           "field_name": "RP_email",
           "label": "Email",
           "form_placeholder": "joe@example.com"
          },

         {
           "iso_path": ["role","CI_RoleCode"],
           "field_name": "RP_role",
           "label": "Role",
           "preset": "select",
           "choices": [
             {
               "value": "author",
               "label": "Author"
             },
             {
               "value": "custodian",
               "label": "Custodian"
             },
             {
               "value": "distributor",
               "label": "Distributor"
             },
             {
               "value": "originator",
               "label": "Originator"
             },
             {
               "value": "owner",
               "label": "Owner"
             },
             {
               "value": "pointOfContact",
               "label": "Point of Contact"
             },
             {
               "value": "principalInvestigator",
               "label": "Principal Investigator"
             },
             {
               "value": "processor",
               "label": "Processor"
             },
             {
               "value": "publisher",
               "label": "Publisher"
             },
             {
               "value": "resourceProvider",
               "label": "Resource Provider"
             },
             {
               "value": "user",
               "label": "User"
             },
             {
               "value": "sponsor",
               "label": "Sponsor"
             }
             ,
             {
               "value": "coAuthor",
               "label": "Co Author"
             }
             ,
             {
               "value": "collaborator",
               "label": "Collaborator"
             }
             ,
             {
               "value": "editor",
               "label": "Editor"
             }
             ,
             {
               "value": "mediator",
               "label": "Mediator"
             }
             ,
             {
               "value": "rightsHolder",
               "label": "Rights Holder"
             }
             ,
             {
               "value": "contributor",
               "label": "Contributor"
             }
             ,
             {
               "value": "funder",
               "label": "Funder"
             }
             ,
             {
               "value": "stakeholder",
               "label": "Stakeholder"
             }
          ]
        }
     ]
    },

    {
      "field_name": "maintenanceAndUpdateFrequency",
      "label": "Maintenance and update frequency",
      "preset": "select",
      "choices": [
        {
          "value": "continual",
          "label": "Continual"
        },
        {
          "value": "daily",
          "label": "Daily"
        },
        {
          "value": "weekly",
          "label": "Weekly"
        },
        {
          "value": "Fortnightly",
          "label": "Fortnightly"
        },
        {
          "value": "monthly",
          "label": "Monthly"
        },
        {
          "value": "quarterly",
          "label": "Quarterly"
        },
        {
          "value": "bianually",
          "label": "Bianually"
        },
        {
          "value": "annually",
          "label": "Annually"
        },
        {
          "value": "as_needed",
          "label": "As Needed"
        },
        {
          "value": "irregular",
          "label": "Irregular"
        },
        {
          "value": "not_planned",
          "label": "Not Planned"
        },
        {
          "value": "unknown",
          "label": "Unknown"
        }
     ]
   },
   {
         "field_name": "maintenanceNote",
         "label": "Maintenance Note"
   },
   {
      "field_name": "citation_identifier",
      "label": "Citation identifier",
      "form_placeholder": "http://doi.org/12345.67890",
      "display_property": "foaf:homepage",
      "display_snippet": "link.html"
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "dataset_organization"
    },
    {
      "field_name": "version",
      "label": "Version",
      "validators": "ignore_missing unicode package_version_validator",
      "form_placeholder": "1.0"
    },
    {
      "field_name": "author",
      "label": "Authors",
      "preset": "composite_repeating",
      "form_blanks": 1,
      "subfields": [{
          "field_name": "name",
          "label": "Name",
          "form_placeholder": "eg. John Smith"
        },
        {
          "field_name": "type",
          "label": "Type",
          "choices": [{
              "value": "collaborator",
              "label": "Collaborator"
            },
            {
              "value": "editor",
              "label": "Editor"
            }
          ]
        }
      ]
    },
    {
      "field_name": "spatial",
      "label": "Spatial",
      "form_snippet": "spatial.html"
    }, {
      "field_name": "bbox-north-lat",
      "label": "North Bounding Latitude",
      "form_snippet": null
    }, {
      "field_name": "bbox-south-lat",
      "label": "South Bounding Latitude",
      "form_snippet": null
    }, {
      "field_name": "bbox-east-long",
      "label": "East Bounding Longitude",
      "form_snippet": null
    }, {
      "field_name": "bbox-west-long",
      "label": "West Bounding Longitude",
      "form_snippet": null
    },
    {
      "field_name": "EX_TemporalExtent",
      "label": "Temportal Extent",
      "preset": "composite",
      "subfields": [{
          "field_name": "temporal-extent-begin",
          "label": "Begin"
        },
        {
          "field_name": "temporal-extent-end",
          "label": "End"
        }
      ]
    }, {
      "field_name": "EX_VerticalExtent",
      "label": "Vertical Extent",
      "preset": "composite",
      "subfields": [{
          "field_name": "vertical-extent-min",
          "label": "Min"
        },
        {
          "field_name": "vertical-extent-max",
          "label": "Max"
        }
      ]
    }


  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
      "form_placeholder": "eg. January 2011 Gold Prices"
    },
    {
      "field_name": "description",
      "label": "Description",
      "form_snippet": "markdown.html",
      "form_placeholder": "Some useful notes about the data"
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "resource_format_autocomplete"
    }
  ]
}
