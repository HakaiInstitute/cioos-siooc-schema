{
   "scheming_version":1,
   "dataset_type":"dataset",
   "about":"An initial implementation of the cioos-siooc CKAN dataset schema",
   "about_url":"http://github.com/ckan/ckanext-scheming",
   "form_languages":[
      "en",
      "fr"
   ],
   "dataset_fields":[
      {
         "field_name":"title_translated",
         "preset":"fluent_core_translated",
         "label":{
            "fr":"Titre",
            "en":"Title"
         },
         "form_placeholder":{
            "fr":"p. ex. Un titre descriptif",
            "en":"eg. A descriptive title"
         }
      },
      {
         "field_name":"name",
         "label":"URL",
         "preset":"dataset_slug",
         "form_placeholder":"eg. my-dataset"
      },
      {
         "field_name":"notes_translated",
         "preset":"fluent_markdown",
         "label":"Description",
         "required":true,
         "form_placeholder":{
            "fr":"par exemple: quelques notes utiles sur les données",
            "en":"eg. Some useful notes about the data"
         }
      },
      {
         "field_name":"tag_string_translated",
         "preset":"fluent_tags",
         "label":{
            "fr":"Mots-clés",
            "en":"Keywords"
         },
         "form_placeholder":{
            "fr":"p. ex. économie, santé mentale, gouvernement",
            "en":"eg. economy, mental health, government"
         }
      },
      {
         "field_name":"license_id",
         "label":"License",
         "form_snippet":"license.html",
         "help_text":"License definitions and additional information can be found at http://opendefinition.org/"
      },
      {
         "field_name":"CI_Date",
         "label":"Dates",
         "preset":"composite_repeating",
         "form_blanks":1,
         "subfields":[
            {
               "field_name":"date",
               "label":"Date",
               "preset":"date",
               "form_attrs":{
                  "required pattern":"[0-9]{4}-[0-9]{2}-[0-9]{2}"
               },
               "form_placeholder":"yyyy-mm-dd"
            },
            {
               "field_name":"dateType",
               "label":"Type",
               "choices":[
                  {
                     "value":"publication",
                     "label":"Publication"
                  },
                  {
                     "value":"revision",
                     "label":"Revision"
                  },
                  {
                     "value":"expiry",
                     "label":"Expiry"
                  },
                  {
                     "value":"lastUpdate",
                     "label":"Last Update"
                  },
                  {
                     "value":"lastRevision",
                     "label":"Last Revision"
                  },
                  {
                     "value":"nextUpdate",
                     "label":"Next Update"
                  },
